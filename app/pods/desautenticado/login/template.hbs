{{page-title "Login"}}

<div class="login-model container">

  <div class="row">

    <div class="col-12 background-black padding-top-sm padding-bottom-sm margin-bottom-sm">
      <h2 class="white">Tom<em class="red text-normal">4</em>te</h2>
    </div>

    <div class="col-12 margin-top-sm">

      <UiInput
        class="login"
        @type="text"
        @placeholder="E-mail"/>

    </div>

    <div class="col-12">

      <UiInput
        class="password"
        @type="password"
        @placeholder="Senha"/>

    </div>
  
    <div class="col-md-6 col-sm-6">
      <button class="submit-button">Entrar</button>
    </div>
    
    <div class="col-md-6 col-sm-6">
      <LinkTo @route="desautenticado.cadastrar" @class="submit-button" >
        Cadastrar-se
      </LinkTo>
    </div>

  </div>
</div>
